<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
	   		http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="projetDao" class="org.example.demo.ticket.consumer.impl.dao.ProjetDaoImpl"/>
    <bean id="ticketDao" class="org.example.demo.ticket.consumer.impl.dao.TicketDaoImpl"/>

    <bean id="daoFactory" class="org.example.demo.ticket.business.implementations.TicketManagerImpl">
        <property name="projetDao" ref="projetDao"/>
        <property name="ticketDao" ref="ticketDao"/>
    </bean>

    <bean id="abstractManager" abstract="true">
        <property name="daoFactory" ref="daoFactory"/>
    </bean>
    <bean id="projetManager" class="org.example.demo.ticket.consumer.impl.dao.ProjetDaoImpl" parent="abstractManager"/>
    <bean id="ticketManager" class="org.example.demo.ticket.consumer.impl.dao.TicketDaoImpl" parent="abstractManager"/>
</beans>